---

const TAGS = {
  HTML: {
    name: 'HTML', 
    class: 'bg-black/10 text-black'
    },
  CSS: {
    name: 'CSS', 
    class: 'bg-black/10 text-black'
    },
  JavaScript: {
    name: 'JavaScript', 
    class: 'bg-black/10 text-black'
    }

}
const PROJECTS = [
    {
        title: 'TaTeTi',
        description: '', 
        link: 'https://tateti.giannina.xyz/', 
        github: 'https://github.com/GianninaGit/tateti.git',
        tags: [TAGS.HTML, TAGS.CSS, TAGS.JavaScript]
    }
]

---

{
    PROJECTS.map(({title, description, link, github, tags}) => (
        <article>
            <h3 class="text-2xl font-semibold text-red-500/90 mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <div class="flex flex-col mb-4">
                <a href={link} class="mb-2 text-blue-500 hover:underline" >▶️ ¡Juega ahora!</a>
                <a href={github} class="text-blue-500 hover:underline">🔗 Ver en GitHub</a>
            </div>
            <ul class="flex gap-x-4 flex-row mb-4">
                {tags.map(tag => (
                    <li>
                        <span class={`flex gap-x-2 rounded-full text-s ${tag.class} py-1 px-2`}>
                            {tag.name}
                        </span>
                    </li>
                ))}
            </ul>           
        </article>
    ))
}